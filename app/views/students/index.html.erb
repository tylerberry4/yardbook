<h1>Listing students</h1>

<table>
  <thead>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Email</th>
    <th>Blurb</th>
    <th>GitHub url</th>
    <th>Twitter url</th>
    <th>LinkedIn url</th>
    <th>Webpage</th>
    <th>Title</th>
    <th>Profile Pic</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= student.fname %></td>
        <td><%= student.lname %></td>
        <td><%= student.email %></td>
        <td><%= student.blurb %></td>
        <td><%= student.github_url %></td>
        <td><%= student.twitter_url %></td>
        <td><%= student.linkedin_url %></td>
        <td><%= student.webpage %></td>
        <td><%= student.title %></td>
        <td><% if student.profile_pic? %>
              <%= link_to "profile_pic", student.profile_pic.url %>
              <%= image_tag student.profile_pic.url(:thumb) %>
          <% end %> </td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
